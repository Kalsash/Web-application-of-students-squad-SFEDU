@using Microsoft.AspNetCore.Identity
@model Web_application_of_students_squad_SFEDU.ViewModels.ChangeRoleViewModel

<h2 style="margin-top: 94px">Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post"  style="margin-bottom: 12%">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>