@model Web_application_of_students_squad_SFEDU.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Users" style="margin-top: 84px">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group" style="padding: 10px">
                <label asp-for="Surname" class="control-label" style="color: black">Фамилия</label>
                <input type="text" maxlength="40"asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Name" class="control-label" style="color: black">Имя</label>
                <input type="text" maxlength="40" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Patronymic" class="control-label" style="color: black">Отчество</label>
                <input type="text" maxlength="40" asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="BirthDate" class="control-label" style="color: black">Дата рождения</label>
                <input type="date" min="1922-01-01" max="2012-01-01" asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="DirectionOfSquad" class="control-label" style="color: black">Направление отряда</label>
                <select asp-for="DirectionOfSquad" class="form-control">
                    <option value="Педагогическое">Педагогическое (здесь же спортивно-педагогический отряд)</option>
                    <option value="Строительное">Строительное</option>
                    <option value="Сервисное">Сервисное (здесь же информационный отряд)</option>
                    <option value="Отряд проводников">Отряд проводников</option>
                </select><br>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="NameOfSquad" class="control-label" style="color: black">Название отряда</label>
                <input type="text" maxlength="60" asp-for="NameOfSquad" class="form-control" />
                <span asp-validation-for="NameOfSquad"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Department" class="control-label" style="color: black">Факультет</label>
                <input type="text" maxlength="40" asp-for="Department" class="form-control" />
                <span asp-validation-for="Department"></span>
            </div>

            <div class="form-group" style="padding: 10px">
                <label asp-for="Course" class="control-label" style="color: black">Курс</label>
                <input type="text" maxlength="40" asp-for="Course" class="form-control" />
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Group" class="control-label" style="color: black">Группа</label>
                <input type="text" maxlength="40" asp-for="Group" class="form-control" />
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Money" class="control-label" style="color: black">Бюджет/Коммерция</label>
                <select asp-for="Money" class="form-control">
                    <option value="Бюджет">Бюджет</option>
                    <option value="Коммерция">Коммерция</option>
                </select><br>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="VK" class="control-label" style="color: black">Ссылка VK</label>
                <input type="text" maxlength="80" asp-for="VK" class="form-control" />
            </div>
    <p class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </p>
</form>