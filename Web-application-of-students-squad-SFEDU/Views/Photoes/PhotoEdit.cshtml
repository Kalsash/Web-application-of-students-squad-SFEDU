@model Galery

<div>
    <h1 style="margin-top: 70px; text-align: center">Редактировать фото</h1>
    <div>
        <form asp-controller="Photoes" asp-action="PhotoEdit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="TitleImagePath" />

            <div asp-validation-summary="All"></div>

            <div  style="text-align: center">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
             <div class="div-box">
                 <div  style="text-align: center">
                     <p><b>Фотографии должны быть формата jpeg или png!</b></p>
                     <label asp-for="TitleImagePath"></label>
                     <input type="file" name="titleImageFile" id="titleImageFile" />
                 </div>
                <img class="img-block" src="~/images/gallery/@Model.TitleImagePath" alt = "Фото отобразится после сохранения!" style="width: 50%; margin-left: 25%"/>
            </div>
             <div style="text-align: center">
                 <input type="submit" value="Сохранить" style="margin: 10px 0;"/>
             </div>
        </form>
    </div>
</div>
