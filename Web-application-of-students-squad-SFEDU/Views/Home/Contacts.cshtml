@model Contact


<section class="contact_section ">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h3 style="font-size: 45px; font-family: 'AmaticSC-Bold'">
                                Свяжитесь с нами
                            </h3>
                            <p style="font-size: 25px; font-family: 'AmaticSC-Bold'">
                                Ответим на любые ваши вопросы
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact-form">
                        <h5>
                            Связаться
                        </h5>
                        <form method="post" asp-controller="Home" asp-action="Contacts">
                             <div asp-validation-summary="ModelOnly"></div>
                            <input type="hidden" asp-for="Id"/>
                            <div>
                                <input type="email" placeholder="Электронная почта" asp-for="Email"/>
                                <span asp-validation-for="Email"></span>
                            </div>

                            <div>
                                  <input type="text" placeholder="Полное имя " asp-for="FullName" />
                                  <span asp-validation-for="FullName"></span>
                            </div>
                            <div>
                                <input type="text" placeholder="Номер телефона" asp-for="PhoneNumber"/>
                                 <span asp-validation-for="PhoneNumber"></span>
                            </div>
 
                            <div>
                                <input type="text" placeholder="Ваше сообщение" class="input_message"asp-for="TextMessage" />
                                 <span asp-validation-for="TextMessage"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn_on-hover">
                                    <b>Отправить</b>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end contact section-->